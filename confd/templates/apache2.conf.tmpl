ServerRoot "/etc/apache2"
Mutex file:${APACHE_LOCK_DIR} default
DefaultRuntimeDir ${APACHE_RUN_DIR}
PidFile ${APACHE_PID_FILE}
Timeout 300
KeepAlive Off
MaxKeepAliveRequests 100
KeepAliveTimeout 5
User ${APACHE_RUN_USER}
Group ${APACHE_RUN_GROUP}
HostnameLookups Off

# Include module configuration:
IncludeOptional mods-enabled/*.load
IncludeOptional mods-enabled/*.conf

# Include list of ports to listen on
Include ports.conf

<Directory />
	Options FollowSymLinks
	AllowOverride None
	Require all denied
</Directory>

<Directory /usr/share>
	AllowOverride None
	Require all granted
</Directory>

<Directory /var/www/>
	Options FollowSymLinks
	AllowOverride None
	Require all granted
</Directory>

<Directory ${APACHE_DOCUMENT_ROOT}>
	AllowOverride ${APACHE_ALLOW_OVERRIDE}
	Require all granted
</Directory>

AccessFileName .htaccess
<FilesMatch "^\.ht">
	Require all denied
</FilesMatch>

LogFormat "%v:%p %a %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\"" vhost_combined
LogFormat "%a %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\"" combined
LogFormat "%a %l %u %t \"%r\" %>s %O" common
LogFormat "%{Referer}i -> %U" referer
LogFormat "%{User-agent}i" agent

{{ if not (exists "/apache/disable/access/log") }}
{{ if exists "/apache/customlog" }}
CustomLog {{ getv "/apache/customlog" }}
{{ else }}
CustomLog ${APACHE_LOG_DIR}/access.log combined
{{ end }}
{{ end }}
{{ if exists "/apache/errorlog" }}
ErrorLog {{ getv "/apache/errorlog" }}
{{ else }}
ErrorLog ${APACHE_LOG_DIR}/error.log
{{ end }}
{{ if exists "/apache/loglevel" }}
LogLevel {{ getv "/apache/loglevel" }}
{{ else }}
LogLevel error
{{ end }}

GracefulShutdownTimeout 30

ServerName ${APACHE_SERVER_NAME}
DocumentRoot ${APACHE_DOCUMENT_ROOT}

AllowEncodedSlashes ${APACHE_ALLOW_ENCODED_SLASHES}

LimitRequestFieldSize 16384

# Include generic snippets of statements
IncludeOptional conf-enabled/*.conf

